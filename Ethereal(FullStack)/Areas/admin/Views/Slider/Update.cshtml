@model Slider

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <form asp-area="admin" asp-controller="slider" asp-action="update" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="@Model.Contetnt" class="form-label">Content</label>
                    <input class="form-control" asp-for="@Model.Contetnt">
                    <span asp-validation-for="@Model.Contetnt" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <img src="~/Uploads/@Model.Image" alt="daa" width="100  "/>
                    <label asp-for="@Model.ImageFile" class="form-label">Image</label>
                    <input class="form-control" asp-for="@Model.ImageFile">
                    <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.FullName" class="form-label">FullName</label>
                    <input class="form-control" asp-for="@Model.FullName">
                    <span asp-validation-for="@Model.FullName" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</div>

